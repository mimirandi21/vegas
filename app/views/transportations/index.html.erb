<p id="notice"><%= notice %></p>

<h1>Transportations</h1>

<table>
  <thead>
    <tr>
      <th class='name'>Name</th>
      <th class='hours'>Hours</th>
      <th class='web'>Website</th>
    </tr>
  </thead>

  <tbody>
    <% @transportations.each do |transportation| %>
      <tr>
        <td><%= link_to transportation.name, transportation %></td>
        <td><% transportation.hours.split(',').each do |hour|%>
              <%= hour %></br>
            <% end %></td>
        <td><a href='<%= transportation.website %>'><%= transportation.website %></td>
        
        
      </tr>
    <% end %>
  </tbody>
</table>

